<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="User Name"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Phone Number"
            android:textSize="14sp"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Total Price"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/order_phone_number"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_address_and_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Address, City"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_total_price"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Date and Time"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/order_address_and_city"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_show_all_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/order_date_and_time"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:text="Show the Products Ordered"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"/>



    </RelativeLayout>


</RelativeLayout>