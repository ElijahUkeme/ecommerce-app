<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".Activity.User.MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="88dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="22sp"
        android:text="Find, Discover, Choose and Buy Online"
        android:textColor="@color/colorPrimary"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_seller_registration"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:textColor="@color/white"
        android:text="Already have an Account? Login"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_marginRight="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/join_now_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/main_login_button"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textColor="@color/white"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/to_seller_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:text="Want to Sell A Product?Click Here to Register"/>


</RelativeLayout>