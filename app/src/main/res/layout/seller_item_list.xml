<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_product_name_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/item_product_image_seller"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/item_product_name_seller"/>

        <TextView
            android:id="@+id/item_product_price_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Product Price"
            android:textAlignment="center"
            android:layout_below="@+id/item_product_image_seller"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/item_product_description_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Product Description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_below="@+id/item_product_price_seller"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/item_product_status_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Product Status"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_below="@+id/item_product_description_seller"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>