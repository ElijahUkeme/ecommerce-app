<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Write Your Shipping Details"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_margin="25dp"/>

    <EditText
        android:id="@+id/shipping_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txt"/>

    <EditText
        android:id="@+id/shipping_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:hint="Your Phone Number"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:layout_below="@+id/shipping_name"/>

    <EditText
        android:id="@+id/shipping_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:hint="Your Home Address"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/shipping_phone_number"/>

    <EditText
        android:id="@+id/shipping_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:hint="Your City Name"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/shipping_address"/>

    <Button
        android:id="@+id/confirm_final_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="confirm"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</RelativeLayout>